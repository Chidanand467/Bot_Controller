<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Target Coordinates Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Target Coordinates"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/et_target_x"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="X"
                        android:inputType="numberDecimal|numberSigned"
                        android:layout_marginEnd="8dp" />

                    <EditText
                        android:id="@+id/et_target_y"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Y"
                        android:inputType="numberDecimal|numberSigned"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_set_target"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Set Target"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/blue_500" />

                <TextView
                    android:id="@+id/tv_target_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No target set"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Preset Buttons Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quick Presets"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/btn_preset_home"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Home\n(0,0)"
                        android:layout_marginEnd="4dp"
                        android:backgroundTint="@color/green_500" />

                    <Button
                        android:id="@+id/btn_preset_point1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Point 1\n(50,100)"
                        android:layout_marginHorizontal="4dp"
                        android:backgroundTint="@color/blue_500" />

                    <Button
                        android:id="@+id/btn_preset_point2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Point 2\n(100,50)"
                        android:layout_marginStart="4dp"
                        android:backgroundTint="@color/orange_700" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Navigation Controls Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Navigation Control"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/btn_start_navigation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Start Navigation"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="@color/green_500" />

                    <Button
                        android:id="@+id/btn_stop_navigation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Stop Navigation"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="@color/red_500"
                        android:enabled="false" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_navigation_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ready for navigation"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Figure-8 Controls Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Figure-8 Pattern"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/btn_start_figure8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/start_figure8"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="@color/purple_500" />

                    <Button
                        android:id="@+id/btn_stop_figure8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/stop_figure8"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="@color/red_500"
                        android:enabled="false" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_figure8_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Figure-8 ready"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Robot Status Display -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Robot Status"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tv_current_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Position: (0.0, 0.0)"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tv_current_orientation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Orientation: 0.0Â°"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tv_current_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mode: IDLE"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tv_battery_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/battery_level"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
